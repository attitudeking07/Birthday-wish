<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Holi War: Ultimate Challenge</title>
    <style>
        body { margin: 0; padding: 0; background: #0b0b0b; overflow: hidden; font-family: 'Segoe UI', sans-serif; touch-action: none; color: white; }
        #ui { position: absolute; top: 10px; width: 100%; display: flex; justify-content: space-around; z-index: 100; pointer-events: none; }
        .stat { background: rgba(0,0,0,0.6); padding: 5px 15px; border-radius: 20px; border: 1px solid #333; }
        #high-score { color: #ffea00; }
        
        .balloon { 
            position: absolute; width: 60px; height: 80px; border-radius: 50% 50% 50% 50% / 40% 40% 60% 60%;
            cursor: pointer; box-shadow: inset -10px -10px 15px rgba(0,0,0,0.3);
            animation: fall linear forwards;
        }
        .buff { border: 4px solid white; animation: glow 0.5s infinite alternate !important; }
        @keyframes glow { from { box-shadow: 0 0 5px #fff; } to { box-shadow: 0 0 20px #fff; } }
        @keyframes fall { from { top: -100px; } to { top: 110vh; } }
        
        #overlay { 
            position: fixed; inset: 0; background: rgba(0,0,0,0.95); 
            display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 200;
        }
        .btn { background: #ff007f; color: #fff; border: none; padding: 15px 40px; border-radius: 50px; font-size: 1.2rem; cursor: pointer; margin-top: 20px; font-weight: bold; text-transform: uppercase; }
        .dev-credit { position: fixed; bottom: 10px; width: 100%; text-align: center; font-size: 0.8rem; color: #444; letter-spacing: 1px; }
        #active-buff { position: fixed; bottom: 50px; width: 100%; text-align: center; color: #00e5ff; font-weight: bold; font-size: 1.2rem; text-shadow: 0 0 10px #00e5ff; }
    </style>
</head>
<body>

<div id="ui">
    <div class="stat">Score: <b id="score">0</b></div>
    <div class="stat">Best: <b id="high-score">0</b></div>
    <div class="stat">HP: <b id="health">100%</b></div>
</div>

<div id="active-buff"></div>

<div id="overlay">
    <h1 style="color: #ff007f; text-shadow: 0 0 15px #ff007f; font-size: 2.5rem;">HOLI WAR V4.1</h1>
    <p style="color: #ccc;">Collect Buffs: ‚≠ê 2X | ‚ù§Ô∏è HP | üïí Slow</p>
    <button class="btn" onclick="startGame()">Start Game</button>
</div>

<div class="dev-credit">Developed by Deepak</div>

<script>
    let score = 0, health = 100, gameActive = false, speedScale = 1, multiplier = 1;
    let highScore = localStorage.getItem('deepak_game_high_score') || 0;
    const colors = ['#ff007f', '#00e5ff', '#ffea00', '#ff5722', '#4caf50'];

    document.getElementById('high-score').innerText = highScore;

    function startGame() {
        score = 0; health = 100; speedScale = 1; multiplier = 1; gameActive = true;
        document.getElementById('score').innerText = score;
        document.getElementById('health').innerText = health + "%";
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('active-buff').innerText = "";
        spawnLoop();
    }

    function spawnLoop() {
        if (!gameActive) return;
        createObject();
        let timeout = Math.max(250, 1000 - (score * 0.4));
        setTimeout(spawnLoop, timeout);
    }

    function createObject() {
        const b = document.createElement('div');
        b.className = 'balloon';
        let rand = Math.random();
        let type = 'normal';
        let color = colors[Math.floor(Math.random() * colors.length)];

        if (rand > 0.90) { 
            b.classList.add('buff');
            let buffType = Math.random();
            if (buffType < 0.33) { type = 'double'; color = '#ffea00'; b.innerHTML = "‚≠ê"; }
            else if (buffType < 0.66) { type = 'heal'; color = '#4caf50'; b.innerHTML = "‚ù§Ô∏è"; }
            else { type = 'slow'; color = '#00e5ff'; b.innerHTML = "üïí"; }
            b.style.display = "flex"; b.style.alignItems = "center"; b.style.justifyContent = "center";
            b.style.fontSize = "1.8rem";
        }

        b.style.backgroundColor = color;
        b.style.left = Math.random() * (window.innerWidth - 70) + 'px';
        let duration = (3.5 / (1 + score/600)) / speedScale;
        b.style.animationDuration = Math.max(1.2, duration) + 's';
        
        b.addEventListener('animationend', () => {
            if (b.parentElement && type === 'normal') {
                health -= 20;
                document.getElementById('health').innerText = health + "%";
                if (health <= 0) endGame();
            }
            b.remove();
        });

        b.onclick = (e) => {
            if (type === 'normal') {
                score += (10 * multiplier);
            } else {
                applyBuff(type);
            }
            document.getElementById('score').innerText = score;
            createSplash(e.pageX, e.pageY, color);
            b.remove();
        };
        document.body.appendChild(b);
    }

    function applyBuff(type) {
        const msg = document.getElementById('active-buff');
        if (type === 'double') {
            multiplier = 2; msg.innerText = "DOUBLE POINTS!";
            setTimeout(() => { multiplier = 1; msg.innerText = ""; }, 7000);
        } else if (type === 'heal') {
            health = Math.min(100, health + 20);
            document.getElementById('health').innerText = health + "%";
            msg.innerText = "HEALTH RESTORED!";
            setTimeout(() => { msg.innerText = ""; }, 2000);
        } else if (type === 'slow') {
            speedScale = 0.6; msg.innerText = "SLOW MOTION!";
            setTimeout(() => { speedScale = 1; msg.innerText = ""; }, 5000);
        }
    }

    function createSplash(x, y, color) {
        const s = document.createElement('div');
        s.style.position = 'absolute';
        s.style.width = '120px'; s.style.height = '120px';
        s.style.left = (x - 60) + 'px'; s.style.top = (y - 60) + 'px';
        s.style.background = `radial-gradient(circle, ${color} 20%, transparent 70%)`;
        s.style.borderRadius = '50%';
        s.style.pointerEvents = 'none';
        s.style.animation = 'splashAnim 0.4s ease-out forwards';
        document.body.appendChild(s);
        setTimeout(() => s.remove(), 400);
    }

    function endGame() {
        gameActive = false;
        if (score > highScore) {
            highScore = score;
            localStorage.setItem('deepak_game_high_score', highScore);
        }
        document.getElementById('high-score').innerText = highScore;
        document.getElementById('overlay').style.display = 'flex';
        document.getElementById('overlay').innerHTML = `
            <h1 style="color: #dc3545;">GAME OVER</h1>
            <p>Score: ${score} | Best: ${highScore}</p>
            <button class="btn" onclick="location.reload()">Try Again</button>
            <p style="margin-top:20px; font-size:0.7rem; color:#444;">Developed by Deepak</p>
        `;
        document.querySelectorAll('.balloon').forEach(b => b.remove());
    }
</script>

<style>
@keyframes splashAnim { from { transform: scale(0); opacity: 1; } to { transform: scale(1.6); opacity: 0; } }
</style>
</body>
</html>
